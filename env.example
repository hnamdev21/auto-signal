# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Alert System Configuration
# Comma-separated list of trading pairs (default: BTCUSDT,ETHUSDT)
PAIRS=BTCUSDT,ETHUSDT

# Comma-separated list of timeframes (default: 5m,15m)
TIMEFRAMES=5m,15m

# Volume spike threshold multiplier (default: 1.5)
VOLUME_SPIKE_THRESHOLD=1.5

# Number of candles to analyze for divergence (default: 3)
DIVERGENCE_CANDLE_COUNT=3

# RSI Configuration
# RSI calculation period (default: 14)
RSI_PERIOD=14

# RSI overbought threshold (default: 70)
RSI_OVERBOUGHT=70

# RSI oversold threshold (default: 30)
RSI_OVERSOLD=30

# Number of candles to look back for RSI divergence detection (default: 20)
RSI_DIVERGENCE_LOOKBACK=20

# Scalping Configuration (for 1m timeframe)
# EMA Fast Period (default: 9)
SCALPING_EMA_FAST=9

# EMA Slow Period (default: 21)
SCALPING_EMA_SLOW=21

# Stochastic K Period (default: 14)
SCALPING_STOCHASTIC_K=14

# Stochastic D Period (default: 3)
SCALPING_STOCHASTIC_D=3

# Stochastic Overbought Level (default: 80)
SCALPING_STOCHASTIC_OVERBOUGHT=80

# Stochastic Oversold Level (default: 20)
SCALPING_STOCHASTIC_OVERSOLD=20

# Bollinger Bands Period (default: 20)
SCALPING_BOLLINGER_PERIOD=20

# Bollinger Bands Standard Deviation (default: 2)
SCALPING_BOLLINGER_STDDEV=2

# Volume Spike Threshold for Scalping (default: 2.0)
SCALPING_VOLUME_THRESHOLD=2.0

# Minimum Confidence Level for Scalping Alerts (default: 70)
SCALPING_MIN_CONFIDENCE=70

# Alert Cooldown for Scalping (milliseconds, default: 300000 = 5 minutes)
SCALPING_ALERT_COOLDOWN=300000

# OKX Exchange Configuration
OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_api_secret
OKX_PASSPHRASE=your_okx_passphrase

# OKX Balance Alert Configuration
# Enable balance alerts (default: true)
OKX_BALANCE_ALERTS_ENABLED=true

# Balance alert interval in minutes (default: 5)
OKX_BALANCE_ALERT_INTERVAL=5

# Minimum balance threshold for alerts (default: 0.001)
OKX_MIN_BALANCE_THRESHOLD=0.001

# Legacy Configuration (kept for backward compatibility)
SYMBOL=BTCUSDT
INTERVAL=5m
